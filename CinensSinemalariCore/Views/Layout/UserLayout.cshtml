
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CinensSinemalari/assets/css/header.css">
    <link rel="stylesheet" href="~/CinensSinemalari/assets/fontawesome-free-5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/CinensSinemalari/assets/css/owl.carousel.min.css">
