    <link rel="stylesheet" href="~/CinensSinemalari/assets/css/popup.css">
    <link rel="stylesheet" href="~/CinensSinemalari/assets/css/owl.theme.default.min2.css">
    

    <title>Cinens</title>
    <link rel="shortcut icon" href="~/CinensSinemalari/assets/img/titlelogo.png">

</head>

<body>
    <!-- Header -->
    <header>
        <div class="navbar">
            <div class="left">
                <ul>
                    <li><a href="~/Movie/Index/">ANA SAYFA</a></li>
                    <div class="dropdown">
                        <button type="button" onclick="myFunction()" class="dropbtn">SİNEMALAR<i class="fas fa-sort-down"></i></button>
                        <div id="myDropdown" class="dropdown-content">
                            @await Component.InvokeAsync("BranchList");
                        </div>
                    </div>
                    <li><a href="~/About/Index/">HAKKIMIZDA</a></li>
                </ul>
            </div>
            <div class="logo">
                <a href="~/Movie/Index/"><img src="~/CinensSinemalari/assets/img/logo.svg" alt=""></a>
            </div>
            <div class="right">
                <ul>
                    <li><a href="~/DolbyAtmos/Index/">DOLBY ATMOS</a></li>
                    <li><a href="~/Campaigns/Index/">KAMPANYALARIMIZ</a></li>
                    <li><a href="~/ContactUs/Index/">İLETİŞİM</a></li>

                </ul>
                <div class="bayrak">
                    <a href="#" title="Click for English">
                        <img src="~/CinensSinemalari/assets/img/trbayrak.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </header>
    <!-- Header -->

    <!-- Contact Us Pop Up  -->

    <div class="contact-us-button">
        <div class="talking-balloon">
            <a id="modal-open" href="#openbutton"><img src="~/CinensSinemalari/assets/img/talking-balloon.png" alt="">
                <p>Bize</p>
                <p>Yazın</p>
            </a>
        </div>
        <div class="modal" id="openbutton">
            
            @await Html.PartialAsync("~/Views/Contact/ContactPopUp.cshtml");

        </div>
    </div>

    <!-- Contact Us Pop Up -->

    <!-- Up Button -->
    <div class="up-buton">
        <img href="~/CinensSinemalari/#top" id="yukari-cik" src="~/CinensSinemalari/assets/img/top-scroll.png" alt="">
    </div>
    <!-- Up Button -->

    @RenderBody();


    <footer>
        <div class="footer-area">

            @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml");


            <div class="text">
	            <p class="metin">Yeniliklerden hemen haberdar olmak ve efsaneleri yakından takip etmek</p>
	            <p class="metin2">için lütfen e-posta adresini kayıt ediniz.</p>
            </div>
            <div class="follow-us">
                <span>Bizi Takip Edin</span>
            </div>
            <ul class="icons">
                <li><a href="https://www.facebook.com/CinensSinema/"><i class="fab fa-facebook"></i></a></li>
                <li><a href="https://twitter.com/cinenssinema"><i class="fab fa-twitter"></i></a></li>
                <li><a href="https://www.instagram.com/cinenssinemalari/?hl=tr"><i class="fab fa-instagram"></i></a></li>
                <li><a href="https://www.youtube.com/channel/UCAxrFExJQBNA-3OZaY_vLgw/featured"><i class="fab fa-youtube"></i></a></li>
            </ul>
            <ul class="menu">
                <li><a href="#">SİNEMALAR</a></li>
                <li><a href="#">HAKKIMIZDA</a></li>
                <li><a href="~/CinensSinemalari/#">DOLBY ATMOS</a></li>
                <li><a href="~/CinensSinemalari/#">KAMPANYALARIMIZ</a></li>
                <li><a href="~/CinensSinemalari/#">İLETİŞİM</a></li>
                <li><a href="~/CinensSinemalari/#">KARİYER</a></li>
            </ul>
            <ul class="kvkk">
                <li><a href="~/CinensSinemalari/#">KVKK Aydınlatma Bildirimi</a></li>
                <li><a href="~/CinensSinemalari/#">KVKK Başvuru Formu</a></li>
                <li><a href="~/CinensSinemalari/#">Gizlilik</a></li>
            </ul>

        </div>
        <div class="copyright">
            <span>© Copyright 2017 <b style="color: #EDDA3B;">Cinens</b> Sinemaları</span>
        </div>
        <div class="text-center">
            <li><img src="~/CinensSinemalari/assets/img/footer/footer-badges.png" alt=""></li>
        </div>
        <div class="ticket">
            <li><img src="~/CinensSinemalari/assets/img/footer/biletinial.png" alt=""></li>
        </div>
    </footer>

    <script src="~/CinensSinemalari/assets/js/jquery-3.6.0.min.js "></script>
    <script src="~/CinensSinemalari/assets/js/owl.carousel.min.js "></script>
    <script src="~/CinensSinemalari/assets/js/owl.js "></script>
    <script src="~/CinensSinemalari/assets/js/tabs.js"></script>
    <script src="~/CinensSinemalari/assets/js/app.js"></script>

    <script>
        document.getElementById("defaultOpen").click();
    </script>
</body>

</html>